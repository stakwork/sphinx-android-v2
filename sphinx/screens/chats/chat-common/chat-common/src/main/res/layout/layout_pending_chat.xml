<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="16dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="48dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/text_view_pending_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/primaryBlue"
        app:strokeWidth="1dp">

        <FrameLayout
            android:id="@+id/profile_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:background="@drawable/dotted_circle" />

            <ImageView
                android:id="@+id/include_dashboard_chat_holder_initial"
                android:layout_width="69dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_profile_avatar_circle"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_clock"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:contentDescription="@string/image_description"
                android:background="@color/body"
                android:visibility="visible"
                android:src="@drawable/ic_clock" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/chatHeaderContainer"
        layout="@layout/layout_chat_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_pending_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:text="Test"
        android:textColor="@color/primaryText"
        android:textSize="17sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/profile_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_chat_header_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/material_icons_regular"
        android:text="@string/material_icon_name_lock"
        android:textColor="@color/washedOutReceivedText"
        android:textSize="17sp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/text_view_pending_title"
        app:layout_constraintBottom_toBottomOf="@id/text_view_pending_title"
        app:layout_constraintStart_toEndOf="@id/text_view_pending_title"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/chat_invite_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp"
        android:drawableTint="@color/dashboardWashedOutText"
        android:gravity="center"
        android:text="Invited on April 11, 2025"
        android:textColor="@color/dashboardWashedOutText"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_pending_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_pending_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Your chats will be enabled as soon as your contact goes online"
        android:textColor="@color/mainBottomIcons"
        android:textSize="13sp"
        android:visibility="visible"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_invite_time"
        app:layout_constraintVertical_bias="0.923" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_encryption_notice"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="Messages and calls are secured with end-to-end encryption"
        android:textColor="@color/dashboardWashedOutText"
        android:textSize="14sp"
        android:visibility="visible"
        app:drawableTint="@color/dashboardWashedOutText"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_pending_title"
        app:layout_constraintVertical_bias="0.016" />

    <include
        android:id="@+id/chatFooterContainer"
        layout="@layout/layout_chat_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gph_white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>