<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerBG"
    android:paddingHorizontal="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_pending_title"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="48dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/primaryBlue"
        app:strokeWidth="1dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <FrameLayout
            android:id="@+id/profile_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dotted_circle" />

            <include
                android:id="@+id/include_dashboard_chat_holder_initial"
                layout="@layout/layout_chat_image_initial_holder"
                android:layout_width="@dimen/default_chat_initial_image_xy"
                android:layout_height="@dimen/default_chat_initial_image_xy"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/image_clock"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:contentDescription="@string/clock_icon"
                android:src="@drawable/ic_clock" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/chatHeaderContainer"
        layout="@layout/layout_chat_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_pending_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Test"
        android:textColor="@color/gph_white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/profile_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_chat_header_lock"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_chat_header_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/material_icons_regular"
        android:textSize="25sp"
        android:textColor="@color/washedOutReceivedText"
        android:text="@string/material_icon_name_lock"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/text_view_pending_title"
        app:layout_constraintBottom_toBottomOf="@id/text_view_pending_title"
        app:layout_constraintStart_toEndOf="@+id/text_view_pending_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/chat_invite_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:drawablePadding="8dp"
        android:drawableTint="@color/amp_gray"
        android:gravity="center"
        android:text="Invited on April 11, 2025"
        android:textColor="@color/amp_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_pending_title"
        android:visibility="visible"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_pending_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="388dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Your chats will be enabled as soon as your contact goes online"
        android:textColor="@color/amp_gray"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_invite_time"
        android:visibility="visible"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_encryption_notice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="Messages and calls are secured with end-to-end encryption"
        android:textColor="@color/amp_gray"
        android:textSize="14sp"
        android:visibility="gone"
        app:drawableTint="@color/amp_gray"
        app:drawableTopCompat="@drawable/ic_lock_outline"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_pending_title"
        app:layout_constraintVertical_bias="0.0" />

    <include
        android:id="@+id/chatFooterContainer"
        layout="@layout/layout_chat_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gph_white"
        android:layout_marginTop="380dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_invite_time"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>